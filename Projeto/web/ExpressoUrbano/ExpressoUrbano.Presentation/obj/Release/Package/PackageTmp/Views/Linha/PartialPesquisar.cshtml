@model ExpressoUrbano.Presentation.Models.Linha.LinhaViewModel

@using (Ajax.BeginForm("Pesquisar", "Linha", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Grid", OnBegin = "overlay()", OnComplete = "removeoverlay()" }, new { @id = "frmGerenciarPesquisa", @class = "form-inline", role = "form" }))
{
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(l => l.LinhaId, new { @class = "control-label" })
            @Html.TextBoxFor(l => l.LinhaId, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(l => l.Identificador, new { @class = "control-label" })
            @Html.TextBoxFor(l => l.Identificador, new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(l => l.Itinerario, new { @class = "control-label" })
            @Html.TextBoxFor(l => l.Itinerario, new { @id = "DtNotificacaoPesquisa", @class = "form-control" })
        </div>
        <div class="col-md-3" style="float: right;">
            <div class="form-horizontal row" style="margin-top: 27px;">
                <input type="submit" class="btn btn-sm btn-default" value="Pesquisar" />
                <input type="reset" class="btn btn-sm btn-default" value="Limpar" />
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <br />
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
}
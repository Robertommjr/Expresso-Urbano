@model ExpressoUrbano.Presentation.Models.Rota.RotaViewModel

@using (Ajax.BeginForm("Pesquisar", "Rota", null, new AjaxOptions {HttpMethod = "POST", UpdateTargetId = "Grid", OnBegin = "overlay()", OnComplete = "removeoverlay()"}, new {@id = "frmGerenciarPesquisa", @class = "form-inline", role = "form"}))
{
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(r => r.RotaId, new {@class = "control-label"})
            @Html.TextBoxFor(r => r.RotaId, new {@class = "form-control"})
        </div>
        <div class="col-md-6">
            @Html.LabelFor(r => r.Nome, new {@class = "control-label"})
            @Html.TextBoxFor(r => r.Nome, new {@class = "form-control"})
        </div>
        <div class="col-md-2">
            @Html.LabelFor(r => r.Cor, new {@class = "control-label"})
            @Html.TextBoxFor(r => r.Cor, new {@id = "DtNotificacaoPesquisa", @class = "form-control"})
        </div>
        <div class="col-md-3" style="float: right;">
            <div class="form-horizontal row" style="margin-top: 27px;">
                <input type="submit" class="btn btn-sm btn-default" value="Pesquisar"/>
                <input type="reset" class="btn btn-sm btn-default" value="Limpar"/>
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <br/>
        @Html.ValidationSummary("", new {@class = "text-danger"})
    </div>
}